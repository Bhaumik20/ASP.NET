@model  IEnumerable<Moodle_1._0.Models.Course>
@{
    ViewBag.Title = "Enroll";
}

<h2>Select Courses</h2>
@using (Html.BeginForm("Enroll", "Student", FormMethod.Post, new { @class = "form-group" }))
{
    foreach (var i in Model)
    {
        <div class="form-group">

            <div class="form-control">
                @Html.CheckBox(i.CourseName,new { id=i.CourseId })
                @Html.Label(i.CourseName)
            </div>

        </div>
    }
    <div class="form-group">
        
            <input type="submit" class="btn btn-primary" value="Enroll" />
        
    </div>
}

