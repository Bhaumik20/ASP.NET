@model IEnumerable<Moodle_1._0.Models.Mark>
@{
    ViewBag.Title = "Result";
}

<h2>Result</h2>
@{
    int i = 0;
}


<div class="form-group">
    @Html.ActionLink("+ Add", "AddMark", null, new { @class = "btn btn-success", style = "margin-bottom:5px;margin-right:20px;" })
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="bg-primary">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Course-Id</th>
            <th scope="col">Course</th>
            <th scope="col">Student</th>
            <th scope="col">Total</th>
            <th scope="col">Obtained</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            i++;
            foreach (var c in ViewBag.course as IEnumerable<Moodle_1._0.Models.Course>)
            {
                if (m.CourseId.Equals(c.CourseId))
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@m.CourseId</td>
                        <td>@m.Course.CourseName</td>
                        <td>@m.Student.UserName</td>
                        <td>@m.Total</td>
                        <td>@m.Obtain</td>
                        <td>
                            @Html.ActionLink("Edit", "EditMark", new { id = m.MarkId })
                            |
                            @Html.ActionLink("Delete", "DeleteMark", new { id = m.MarkId })
                        </td>

                    </tr>
                }

            }

        }
    </tbody>
</table>
<div class="form-group">
    @Html.ActionLink("Quiz Result>>", "Index", "AdminResult")
</div>


